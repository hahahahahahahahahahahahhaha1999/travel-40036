<%= form_with(model: @travel, local: true) do |f| %>
    
  <h3>編集する</h3>
  <div class="img-upload">
    <div class="weight-bold-text">
      商品画像
      <span class="indispensable">必須</span>
    </div>
    <div class="click-upload">
      <p>
        クリックしてファイルをアップロード
      </p>
      <%= f.file_field :image, id:"item-image" %>
    </div>
    <%= image_tag(@travel.image) if @travel.image.attached? %>
  </div>

  <div class="field">
    <%= f.label :prefecture_id %>
    <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: "Select a prefecture" %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :check_in %>
    <%= f.date_field :check_in %>
  </div>

  <div class="field">
    <%= f.label :check_out %>
    <%= f.date_field :check_out %>
  </div>

  <div class="field">
    <%= f.label :partner %>
    <%= f.collection_select(:partner_id, Partner.all, :id, :name, {}, {class:"select-box"})%>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>

  <div class="field">
    <%= f.label :travel_site %>
    <%= f.collection_select(:travel_site_id, TravelSite.all, :id, :name, {}, {class:"select-box"})%>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>